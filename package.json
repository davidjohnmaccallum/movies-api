{
  "name": "movies-api",
  "version": "1.0.1",
  "description": "I have been asked to do a little full stack code assignment. The task is to create a program with basic CRUD functionality for maintaining a list of movies. This is the backend API. It is written using NodeJS, TypeScript and Express.",
  "main": "dist/server.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "npm run tslint && tsc",
    "clean": "rm -rf ./dist ./coverage",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "testcoverage": "nyc mocha -r ts-node/register test/**/*.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "nodemon": "nodemon"
  },
  "keywords": [
    "movies",
    "entertainment"
  ],
  "author": "David MacCallum <davidjohnmac@gmail.com>",
  "repository": {
    "type": "github",
    "url": "https://github.com/davidjohnmaccallum/movies-api"
  },
  "license": "UNLICENCED",
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.4",
    "express": "^4.18.2",
    "express-prettify": "^0.1.1",
    "morgan": "^1.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.11.7",
    "@types/uuid": "^3.4.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000",
    "typescript-tslint-plugin": "^0.3.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
